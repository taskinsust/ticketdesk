@using TicketDesk.Localization.Views.ProjectSettings
@model TicketDesk.Domain.Model.Project
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/bundles/project-settings")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.controller-name').html('Project Settings');
            $('.controller-action').html('Create');
        });
    </script>
}
<main>
    <div class="container">
        <fieldset>
            <legend class="col-lg-8 col-lg-offset-2 col-md-9 col-md-offset-1 col-sm-12">@New.Legend</legend>
            <div class="col-lg-7 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
                @using (Html.BeginForm("New", "ProjectSettings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="card card-info">
                        <div class="card-header">
                            <h2 class="card-title">@New.Header</h2>
                        </div>
                        <div class="card-body">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.ProjectName, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.ProjectDescription, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.ProjectDescription, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>

                        <div class="card-footer">
                            <div class="">
                                <button type="submit" class="btn btn-success" tabindex="10">
                                    <i class="fa fa-plus"></i>&nbsp;&nbsp;@New.SaveOption
                                </button>&nbsp;&nbsp;
                                @Html.ActionLink(New.BackOption, "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-dark", @role = "button" })

                            </div>
                        </div>
                    </div>
                }
            </div>
        </fieldset>
    </div>
</main>