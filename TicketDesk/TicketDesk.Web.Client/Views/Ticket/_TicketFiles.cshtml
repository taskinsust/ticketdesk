@using TicketDesk.Localization.Views.Ticket

@using TicketDesk.IO
@model IEnumerable<TicketDeskFileInfo>
@{

    if (Model != null && Model.Any())
    {
        <div class="card callout-info" style="padding-top: 0; padding-bottom: 0;">
            <div class="card-header card-title" style="padding: 3px 5px;">
                @Index.Files
            </div>
            <div class="card-body" style="">
                <ul class="list-unstyled list-inline">
                    @foreach (var file in Model)
                    {
                        <li>
                            <a href="@Url.RouteUrl("GetAttachedFile", new {Id = ViewBag.TicketId, FileName = file.Name})"><i class="fa fa-file fa-align-left"></i> @file.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
}

@section scripts{

    @Scripts.Render("~/bundles/ticketcenter")
    <script type="text/javascript">

        $(document).ready(function () {
            $('.controller-name').html('Ticket');
            $('.controller-action').html('Ticket Details');
        });
    </script>
}